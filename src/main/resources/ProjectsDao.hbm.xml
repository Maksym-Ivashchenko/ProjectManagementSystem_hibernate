<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "ua.goit.homeworkhibernate.model.dao.ProjectsDao" table = "PROJECTS">
        <id name = "id" type = "java.lang.Integer" column = "id">
            <generator class="increment">
                <param name="sequence">projects_id_seq</param>
            </generator>
        </id>
        <property name = "projectName" column = "project_name" type = "string" length="45"/>
        <property name = "projectType" column = "project_type" type = "string" length="45"/>
        <property name = "comments" column = "comments" type = "string" length="45"/>
        <property name = "cost" column = "cost" type = "java.lang.Integer"/>
        <property name="dateCreated" column="date_created" type="java.time.LocalDate"/>
        <set name="developers" table="developers_projects" inverse="true">
            <key column="project_id"/>
            <many-to-many column="developer_id" class="ua.goit.homeworkhibernate.model.dao.DevelopersDao"/>
        </set>
    </class>
</hibernate-mapping>